<%= @restaurant.name %>
<%= @restaurant.address %>
<%= @restaurant.phone_number %>
<%= @restaurant.category %>

<% @restaurant.reviews.each do |review| %>
<div>
  <%= review.content %>
  <%= review.rating %>
</div>
<% end %>

<%= simple_form_for [ @restaurant, @review ], remote: true do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Add a review" %>
<% end %>

